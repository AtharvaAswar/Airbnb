<% layout("layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>listing details</h1>
        </div>
        <div class="card col-6 offset-3">
            <img src=" <%= data.image.url %> " class="card-img-top show-img" alt="image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= data.title %>
                    </b> <br>
                    <%= data.description %> <br>
                        <%= data.price.toLocaleString("en-IN") %> <br>
                            <%= data.location %> <br>
                                <%= data.country %>
                </p>
            </div>
        </div>



        <div class="btns">
            <a href="/listing/<%= data._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="post" action="/listings/<%= data._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>



    </div>