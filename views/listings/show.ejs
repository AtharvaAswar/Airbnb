<% layout("layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>
                <%= data.title %>
            </h1>
        </div>
        <div class="card listing-card col-6 offset-3">
            <img src=" <%= data.image.url %> " class="card-img-top show-img" alt="image">
            <div class="card-body">
                <br>
                <p class="card-text"> Owner: <%= data.owner.username %>
                </p>
                <p class="card-text">
                    <%= data.description %>
                </p>
                <p class="card-text">
                    <%= data.price.toLocaleString("en-IN") %> &#8377;
                </p>
                <p class="card-text">
                    <%= data.location %>
                </p>
                <p class="card-text">
                    <%= data.country %>
                </p>
            </div>
        </div>

        <% if(currentUser && currentUser._id.equals(data.owner._id)) { %>
            <div class="btns">
                <a href="/listings/<%= data._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form method="post" action="/listings/<%= data._id %>?_method=DELETE">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
            <% } %>
                <div class="col-8 offset-3 mb-3">
                    <% if (currentUser) { %>
                        <hr>
                        <h4>Leave a review</h4>
                        <form action="/listings/<%= data._id %>/reviews" method="post" novalidate
                            class="needs-validation">
                            <div class="mt-3 mb-3">
                                <label for="rating" class="form-label">Ratings</label>
                                <input type="range" name="review[rating]" id="rating" min="1" max="5"
                                    class="form-range">
                            </div>
                            <div class="mt-3 mb-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea name="review[comment]" id="comment" rows="8" cols="80" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please comment your reviews</div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <% } %>
                            <hr>

                            <h4> See Reviews</h4>
                            <div class="row">
                                <% for(review of data.review) { %>
                                    <div class="review-card card col-5 ms-3 mb-3">
                                        <div class="card-body">
                                            <div class="card-title">
                                                <%= review.author.username %>
                                            </div>
                                            <div class="card-subtitle">
                                                <%= review.rating %> <i class="fa-solid fa-star"></i>
                                            </div>
                                            <div class="card-text">
                                                <%= review.comment %>
                                            </div>
                                            <% if(currentUser._id.equals(review.author._id)) { %>
                                                <form
                                                    action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    method="post" class="mt-2">
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                </div>

    </div>