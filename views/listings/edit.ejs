<% layout("layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <h3>Edit Listing</h3>
                <form method="post" action="/listings/<%= data._id %>?_method=PUT" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label">Title</label>
                        <input type="text" value="<%= data.title %>" name="listing[title]" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter name</div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[description]" class="form-label">Description</label>
                        <textarea name="listing[description]" id="sd"
                            class="form-control"><%= data.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="listing[image][filename]" class="form-label">Image Filename</label>
                        <input type="text" value="<%= data.image.filename %>" name="listing[image][filename]"
                            class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="listing[image][url]" class="form-label">Image URL</label>
                        <input type="text" value="<%= data.image.url %>" name="listing[image][url]" required
                            class="form-control">
                        <div class="invalid-feedback">Please enter valid link</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="listing[price]" class="form-label">Price</label>
                            <input type="text" value="<%= data.price %>" name="listing[price]" class="form-control"
                                required>
                            <div class="invalid-feedback">Please enter price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="listing[location]" class="form-label">Location</label>
                            <input type="text" value="<%= data.location %>" name="listing[location]"
                                class="form-control" required>
                            <div class="invalid-feedback">Please enter location</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[country]" class="form-label">Country</label>
                        <input type="text" value="<%= data.country %>" name="listing[country]" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter country</div>
                    </div>

                    <button class="btn btn-dark edit-btn mt-3">Save</button>
                </form>
            </div>
        </div>
    </body>