<% layout("layouts/boilerplate.ejs") %>

    <body>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p class="text">Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-dollar-sign"></i></div>
                <p class="text">Budget</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p class="text">Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p class="text">Iconic cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p class="text">Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p class="text">Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p class="text">Beaches</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p class="text">Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p class="text">igloo</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <p class="text">boatHouse</p>
            </div>
            <div class="tax">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display with taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
            <% for (const listings of allListing) { %>
                <a href="/listings/<%= listings._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listings.image.url %>" class="card-img-top" alt="image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listings.title %>
                            </h5>
                            <p class="card-text">
                                &#8377; <%= listings.price.toLocaleString("en-IN") %> /night
                                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                    <% } %>
                </a>
        </div>

    </body>