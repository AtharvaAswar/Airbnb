<% layout("layouts/boilerplate.ejs") %>

    <body>
        <h1>All listings</h1>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
            <% for (const listings of allListing) { %>
                <a href="/listings/<%= listings._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listings.image.url %>" class="card-img-top" alt="image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listings.title %>
                            </h5>
                            <p class="card-text">
                                &#8377; <%= listings.price.toLocaleString("en-IN") %>
                            </p>
                        </div>
                    </div>
                    <% } %>
                </a>
        </div>

    </body>