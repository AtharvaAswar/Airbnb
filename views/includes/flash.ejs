<% if (successMsg && successMsg.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3"
        role="alert">
        <%= successMsg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (errorMsg && errorMsg.length) { %>
            <div class="alert alert-danger alert-dismissible fade show col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3"
                role="alert">
                <%= errorMsg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>